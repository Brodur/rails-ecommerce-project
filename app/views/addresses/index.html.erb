<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= "#{address.address_line_one}, #{address.city}, #{address.province.code}, #{address.postal_code.upcase}" %> <%= link_to "PRIMARY", "", class: "badge badge-pill badge-secondary" if address.is_primary_address %></td>
        <td><%= link_to 'Show', address, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_address_path(address), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
