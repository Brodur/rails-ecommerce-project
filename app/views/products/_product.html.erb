<hr/>
<h3><%= link_to product.name, product %></h3>
<h3><%= product.upc %></h3>
<p>Price: <%= number_to_currency product.price %></p>
<p>Cost: <%= number_to_currency product.cost %></p>
<p>In stock: <%= pluralize product.on_hand, 'unit' %></p>
<% if product.description.present? %>
  <p><%= product.description %></p>
<% end %>

<% if product.image.present? %>
  <p><%= image_tag product.image.variant(resize_to_limit: [100, 100]).processed  %></p>
<% end %>

<p>Category: <%= link_to product.category.name, product.category %></p>
<% if @cart.include?(product) %>
  <p><%= button_to 'âž– Remove from Cart ðŸ›’', remove_from_cart_path(product.id), method: :delete %></p>
<% else %>
  <%= form_with(url: add_to_cart_path(product.id), method: "post") do %>
    <%= label_tag(:quantity, "Quantity:") %>
    <%= number_field_tag 'quantity', '1', min: 1, max: product.on_hand %>
    <%= submit_tag("âž• Add to Cart ðŸ›’") %>
  <% end %>
<% end %>